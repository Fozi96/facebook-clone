  <%= csrf_meta_tags %>
</head>
  <body>
  <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: "#{key}") %>
   <% end %>
   <% if logged_in? %>
   <%= link_to "sign up", user_path(current_user.id) %>
   <%= link_to "Login", session_path(current_user.id), method: :delete %>
   <% else %>
   <%= link_to "Profil", new_user_path %>
   <%= link_to "Logout", new_session_path %>
  <% end %>
  <%= yield %>
